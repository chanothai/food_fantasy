<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_main_food"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainfood.activity.MainActivity">

    <include
        layout="@layout/appbar_collapsing_toolbar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/large_padding_layout"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/shadow_line">

        </FrameLayout>


        <View
            android:id="@+id/shadow_line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/color_shadow"
            android:layout_above="@+id/bottom_bar"/>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemBackground="@color/color_bg_white"
            android:layout_gravity="bottom"
            app:itemIconTint="@color/color_icon_bottom_bar"
            app:itemTextColor="@color/color_icon_bottom_bar"
            app:menu="@menu/menu_navigation"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>