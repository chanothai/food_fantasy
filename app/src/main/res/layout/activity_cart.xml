<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <include layout="@layout/appbar_collapsing_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <include
            layout="@layout/recyclerview_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_bg_solf_gray">

            <LinearLayout
                android:id="@+id/layout_total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/small_padding_layout">

                <onedaycat.com.food_fantasy.customview.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/medium_font"
                    android:textColor="@color/color_font_soft"
                    android:gravity="center|start"
                    android:text="@string/title_total_price"
                    android:padding="@dimen/small_padding_layout"/>

                <onedaycat.com.food_fantasy.customview.CustomTextView
                    android:id="@+id/cart_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/large_font"
                    android:textColor="@color/color_font_dark"
                    android:gravity="center|end"
                    android:text="@string/price_food_test"
                    android:padding="@dimen/small_padding_layout"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding_layout"
                android:layout_below="@+id/layout_total_price">

                <onedaycat.com.food_fantasy.customview.CustomButtonView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small_padding_layout"
                    android:textSize="@dimen/medium_font"
                    android:textColor="@color/color_font_dark"
                    android:textAllCaps="true"
                    android:text="@string/msg_btn_payment"/>

            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>