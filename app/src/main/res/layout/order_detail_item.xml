<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/medium_padding_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/smallest_font"
                android:gravity="end|center"
                android:textColor="@color/color_font_soft"
                android:text="order_date"
                android:padding="@dimen/small_padding_layout"/>

            <TextView
                android:id="@+id/order_item_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:textSize="@dimen/small_font"
                android:textColor="@color/color_font_soft"
                android:text="order_id"
                android:padding="@dimen/small_padding_layout"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end|center">

            <TextView
                android:id="@+id/order_item_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|bottom"
                android:textSize="@dimen/small_font"
                android:textColor="@color/color_font_soft"
                android:text="order_id"
                android:padding="@dimen/small_padding_layout"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/medium_padding_layout"
                    android:gravity="end|center|bottom"
                    android:textSize="@dimen/medium_font"
                    android:textColor="@color/color_font_soft"
                    android:text="@string/topic_total_price"
                    android:layout_marginEnd="@dimen/small_padding_layout"
                    android:padding="@dimen/small_padding_layout"/>

                <TextView
                    android:id="@+id/order_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/medium_padding_layout"
                    android:gravity="end|center|bottom"
                    android:textSize="@dimen/large_font"
                    android:textColor="@color/color_font_dark"
                    android:text="200$"
                    android:padding="@dimen/small_padding_layout"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>